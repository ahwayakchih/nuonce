{
  "name": "nuonce",
  "version": "1.1.2",
  "description": "Nuanced implementation of 'once' functionality, optimized for node.js",
  "keywords": "once, single, function, call, run, node",
  "main": "index.js",
  "scripts": {
    "test": "node --allow-natives-syntax --trace-deopt --code-comments ./test/index.js | ./node_modules/.bin/tap-diff",
    "benchmark": "DOCKER=$(grep ':/docker/' /proc/1/cgroup) INFO=1 node $NODE_FLAGS ./benchmarks/index.js",
    "benchmarks": "(DOCKER=$(grep ':/docker/' /proc/1/cgroup) INFO=1 npm run -s benchmark1call0props && npm run -s benchmark50calls0props && npm run -s benchmark1call3props && npm run -s benchmark50calls3props) > ./reports/benchmarks.txt && (./node_modules/.bin/opener ./reports/benchmarks.txt &)",
    "benchmark1call0props": "CALLS=1 PROPS=0 node $NODE_FLAGS ./benchmarks/index.js",
    "benchmark1call3props": "CALLS=1 PROPS=3 node $NODE_FLAGS ./benchmarks/index.js",
    "benchmark50calls0props": "CALLS=50 PROPS=0 node $NODE_FLAGS ./benchmarks/index.js",
    "benchmark50calls3props": "CALLS=50 PROPS=3 node $NODE_FLAGS ./benchmarks/index.js",
    "benchmarkWithoutGC": "NODE_FLAGS='--max-old-space-size=1000 --max-semi-space-size=512 --noconcurrent_sweeping' npm run -s benchmark",
    "benchmarksWithoutGC": "NODE_FLAGS='--max-old-space-size=1000 --max-semi-space-size=512 --noconcurrent_sweeping' npm run -s benchmarks",
    "doc": "./node_modules/.bin/jsdoc -d reports/jsdoc -c tools/jsdoc.json --readme README.md -r index.js && (./node_modules/.bin/opener ./reports/jsdoc/index.html &)",
    "checkStyle": "eslint index.js > ./reports/eslint.txt",
    "checkCoverage": "rm -rf ./reports/coverage && c8 --clean --report --reporter text --reporter html --reports-dir reports/coverage node --allow-natives-syntax ./test/index.js && mv ./coverage ./reports/coverage && (./node_modules/.bin/opener ./reports/coverage/index.html &)",
    "checkMemory": "node --expose-gc ./test/memory.js && echo 'heapsnapshots created in ./reports directory'"
  },
  "engines": {
    "node": ">=6.9"
  },
  "devDependencies": {
    "beautify-benchmark": "git+https://github.com/ahwayakchih/beautify-benchmark.git",
    "benchmark": "^2.1.4",
    "c8": "^3.4.0",
    "docdash": "^1.0.3",
    "eslint": "^5.14.1",
    "heapdump": "^0.3.12",
    "jsdoc": "git+https://github.com/jsdoc3/jsdoc.git",
    "once": "^1.4.0",
    "once.js": "git+https://github.com/daniellmb/once.js.git",
    "onetime": "^3.0.0",
    "opener": "^1.5.1",
    "tap-diff": "^0.1.1",
    "tape": "^4.10.1",
    "tape-catch": "^1.0.6"
  },
  "homepage": "https://github.com/ahwayakchih/nuonce",
  "author": "Marcin Konicki <ahwayakchih@neoni.net>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ahwayakchih/nuonce/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ahwayakchih/nuonce.git"
  },
  "tonicExample": "const nuonce = require('nuonce');\nconst once = nuonce.stripped;"
}
